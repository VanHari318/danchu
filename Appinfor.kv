MDScreen:
    name: 'thong_tin_ung_dung'
    Image:
        source: 'maintheme.jpg'
        size_hint: None, None
        width: '360000000dp'
        height: '640000dp'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    MDLabel:
        id:xx
        text:"Nhắn tin"
        pos_hint:{"center_x":0.50,"center_y":.95}
        font_size:"35sp"
        halign:"center"
    ScrollView:
        pos_hint:{"center_x":0.50,"center_y":.50}
        do_scroll_y: True
        do_scroll_x: False
        bar_width: dp(10)
        bar_color: 0, 0, 1, 1  # Thanh cuộn xanh dương
        bar_inactive_color: 0.7, 0.7, 0.7, 1  # Thanh cuộn xám khi không hoạt động
        scroll_type: ['bars', 'content']

        MDFloatLayout:
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint:.35,.55
            #md_bg_color:get_color_from_hex("#A9A9A5")
            MDTextFieldRound:
                id:name
                hint_text:"name"
                icon_right:"account"
                pos_hint:{"center_x":.45,"center_y":.65}
                size_hint:.55,.10
                font_size:18
            MDTextFieldRound:
                id:age
                hint_text:"age"
                icon_right:"account-check"
                pos_hint:{"center_x":.45,"center_y":.50}
                size_hint:.55,.10
                font_size:18
            MDTextFieldRound:
                id:city
                hint_text:"city"
                icon_right:"city"
                pos_hint:{"center_x":.45,"center_y":.35}
                size_hint:.55,.10
                font_size:18
    MDTextField:
        id:tin
        hint_text: 'Nhập tin'
        icon_right: ''
        size_hint_x: None
        width: 500
        font_size: 18
        pos_hint: {'center_x': 0.35, 'center_y': 0.15}
    MDRoundFlatButton:
        text:"Gửi"
        text_color: 0, 1, 0, 1
        size_hint:None,None
        pos_hint:{"center_x":.85,"center_y":.15}
        size:(100,190)
        on_release:
    MDRoundFlatButton:
        text: "trở về"
        on_release: root.manager.current = 'giao_dien_chinh'