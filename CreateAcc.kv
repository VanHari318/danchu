Screen:
    name: 'tao_tai_khoan'
    Image:
        source: 'maintheme.jpg'
        size_hint: None, None
        width: '360000000dp'
        height: '640000dp'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    MDLabel:
        id: quan_li
        text: 'QUẢN LÍ NHÂN KHẨU'
        color: (0,128,128,1)
        font_size: 25
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]
        padding_x: 15
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
    MDTextField:
        id: new_user
        hint_text: 'tên tài khoản'
        icon_right: 'account'
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {'center_x': 0.5, 'center_y': 0.52}
    MDTextField:
        id: new_password
        hint_text: 'mật khẩu'
        icon_right: 'eye-off'
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        password: True
    MDTextField:
        id: password_confirm
        hint_text: 'nhập lại mật khẩu'
        icon_right: 'eye-off'
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {'center_x': 0.5, 'center_y': 0.38}
        password: True
    MDTextButton:
        text: 'Đăng Kí'
        pos_hint: {'center_x': 0.4, 'center_y': 0.33}
        font_size: 18
        halign: 'center'
        size_hint_x: None
        on_press: app.register_user()
        on_press: root.manager.current = 'tao_tai_khoan'
    MDTextButton:
        text: 'Xóa'
        pos_hint: {'center_x': 0.6, 'center_y': 0.33}
        font_size: 18
        halign: 'center'
        size_hint_x: None
        on_press: app.clearRegister()
        on_press: root.manager.current = 'tao_tai_khoan'
    MDTextButton:
        text: 'Trở về'
        on_press: root.manager.current = 'man_hinh_dang_nhap'