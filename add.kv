#:import get_color_from_hex kivy.utils.get_color_from_hex
MDScreen:
    name:"add"
    Image:
        source: 'maintheme.jpg'
        size_hint: None, None
        width: '360000000dp'
        height: '640000dp'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    MDLabel:
        id:xx
        text:"THÊM TÀI KHOẢN"
        pos_hint:{"center_x":0.45,"center_y":.90}
        font_size:"35sp"
        halign:"center"
    MDFloatLayout:
        pos_hint:{"center_x":.5,"center_y":.5}
        size_hint:.35,.55
        #md_bg_color:get_color_from_hex("#A9A9A5")
        MDTextFieldRound:
            id:cccd
            hint_text:"Số căn cước công dân"
            icon_right:"account"
            pos_hint:{"center_x":.45,"center_y":.85}
            size_hint:.55,.10
            font_size:18
        MDTextFieldRound:
            id:name
            hint_text:"tên"
            icon_right:"account"
            pos_hint:{"center_x":.45,"center_y":.70}
            size_hint:.55,.10
            font_size:18
        MDTextFieldRound:
            id:age
            hint_text:"tuổi"
            icon_right:"account-check"
            pos_hint:{"center_x":.45,"center_y":.55}
            size_hint:.55,.10
            font_size:18
        MDTextFieldRound:
            id:city
            hint_text:"địa chỉ"
            icon_right:"city"
            pos_hint:{"center_x":.45,"center_y":.40}
            size_hint:.55,.10
            font_size:18
        MDTextFieldRound:
            id:sdt
            hint_text:"Số điện thoại"
            icon_right:"phone"
            pos_hint:{"center_x":.45,"center_y":.25}
            size_hint:.55,.10
            font_size:18
        MDTextFieldRound:
            id:mk
            hint_text:"Email"
            icon_right:"email"
            pos_hint:{"center_x":.45,"center_y":.10}
            size_hint:.55,.10
            font_size:18
    MDRoundFlatButton:
        text:"trở về"
        text_color: 0, 1, 0, 1
        size_hint:None,None
        pos_hint:{"center_x":.35,"center_y":.15}
        size:(100,190)
        on_release:app.back(self)
    MDRoundFlatButton:
        text:"thêm"
        text_color: 0, 1, 0, 1
        size_hint:None,None
        pos_hint:{"center_x":.55,"center_y":.15}
        size:(100,190)
        on_release:app.add(cccd.text,name.text,age.text,city.text,sdt.text,mk.text)
