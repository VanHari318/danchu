ScreenManager:
    LoginScreen:
        name: 'man_hinh_dang_nhap'
    CreateAccScreen:
        name: 'tao_tai_khoan'
    MenuScreen:
        name: 'giao_dien_chinh'
    ProfileScreen:
        name: 'profile'
    UploadScreen:
        name: 'upload'
    HelpScreen:
        name: 'thong_tin_ung_dung'
    FindScreen:
        name: 'tim_tai_khoan'


<LoginScreen>:
    name: 'man_hinh_dang_nhap'
    Screen:
        Image:
            source: 'maintheme.jpg'
            size_hint: None, None
            width: '360000000dp'
            height: '640000dp'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDLabel:
            id: quan_li
            text: 'QUẢN LÍ NHÂN KHẨU'
            color: (0,128,128,1)
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_x: 15
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        MDTextField:
            id: user
            hint_text: 'tên tài khoản'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.52}
        MDTextField:
            id: password
            hint_text: 'mật khẩu'
            icon_right: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            password: True
        MDTextButton:
            text: 'đăng nhập'
            pos_hint: {'center_x': 0.4, 'center_y': 0.4}
            font_size: 18
            halign: 'center'
            size_hint_x: None
            on_press: app.logger()
            on_press: app.showdata(self)
        MDTextButton:
            text: 'Xóa'
            pos_hint: {'center_x': 0.6, 'center_y': 0.4}
            font_size: 18
            halign: 'center'
            size_hint_x: None
            on_press: app.clear()
        MDTextButton:
            text: 'Tạo tài khoản'
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            font_size: 18
            halign: 'center'
            size_hint_x: None
            on_press: root.manager.current = 'tao_tai_khoan'
<CreateAccScreen>
    name: 'tao_tai_khoan'
    Screen:
        Image:
            source: 'maintheme.jpg'
                    size_hint: None, None
                    width: '360000000dp'
                    height: '640000dp'
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}



<MenuScreen>:
    name: 'giao_dien_chinh'
    Screen:
    MDFloatLayout:
        ScreenManager:
            Screen:
                Image:
                    source: 'maintheme.jpg'
                    size_hint: None, None
                    width: '360000000dp'
                    height: '640000dp'
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        title: "Thanh chức năng"
                        left_action_items: [['menu', lambda x: nav_drawer.set_state()]]
                    Widget:
                    MDLabel:
                        id: 'nhan'
                        text: 'Quản lí nhân khẩu'
                        halign: 'center'
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'
                MDLabel:
                    text: 'Chức năng'
                    size_hint_y: None
                    height:self.texture_size[1]
                    color: (0,128,128,1)
                    bold: True
                    italic: True
                ScrollView:
                    MDList:
                        TwoLineIconListItem:
                            text: 'Thông tin tài khoản'
                            secondary_text: 'tra cứu thông tin tài khoản'
                            IconLeftWidget:
                                icon: 'account'
                                on_press: root.manager.current = 'profile'

                        TwoLineIconListItem:
                            text: 'Tra cứu tài khoản'
                            secondary_text: 'truy vấn tài khoản'
                            IconLeftWidget:
                                icon: 'account-search'
                                on_press: root.manager.current = 'tim_tai_khoan'
                        TwoLineIconListItem:
                            text: 'Nhắn tin'
                            secondary_text: 'trò chuyện, giải đáp'
                            IconLeftWidget:
                                icon: 'chat'
                        TwoLineIconListItem:
                            text: 'Giới thiệu'
                            secondary_text: 'thông tin phần mền'
                            IconLeftWidget:
                                icon: 'information'
                                on_press: root.manager.current = 'thong_tin_ung_dung'
<ProfileScreen>:
    name: 'profile'
    BoxLayout:
        orientation: 'vertical'
        spacing: '8dp'
        padding: '8dp'
        Image:
            source: 'user3.png'
        MDLabel:
            text: 'Người dùng'
            size_hint_y: None
            height:self.texture_size[1]
        ScrollView:
            MDList:
                OneLineIconListItem:
                    text: 'Hiện thị thông tin chi tiết'
                    IconLeftWidget:
                        icon: 'account-details'
                        on_press: root.manager.current = 'profile'
                OneLineIconListItem:
                    text: 'Cập nhật thông tin'
                    IconLeftWidget:
                        icon: 'account-edit'
                        on_press: root.manager.current = 'upload'
                OneLineIconListItem:
                    text: 'Đăng xuất'
                    IconLeftWidget:
                        icon: 'logout'
                        on_press: root.manager.current = 'man_hinh_dang_nhap'
    MDTextButton:
        text: 'Trở về'
        on_press: root.manager.current = 'giao_dien_chinh'
<UploadScreen>:
    name: 'upload'
    MDLabel:
        text: 'Upload'
    MDTextButton:
        text: 'Back'
        on_press: root.manager.current = 'profile'

<HelpScreen>:
    name: 'thong_tin_ung_dung'
    MDLabel:
        text: 'Thông tin phần mền'
    MDTextButton:
        text: 'Trở về'
        on_press: root.manager.current = 'giao_dien_chinh'

<FindScreen>:
    name: 'tim_tai_khoan'
    Screen:
        Image:
            source: 'maintheme.jpg'
            size_hint: None, None
            width: '360000000dp'
            height: '64000000dp'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        BoxLayout:
            orientation: "vertical"
            
        MDIconButton:
            icon: 'arrow-left-circle'
            on_press: root.manager.current = 'giao_dien_chinh'

