        id:xx
        text:"Thông báo"
        pos_hint:{"center_x":0.50,"center_y":.95}
        font_size:"35sp"
        halign:"center"
    MDTextField:
        id:subject
        hint_text: 'Subject'
        icon_right: ''
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {'center_x': 0.15, 'center_y': 0.7}
