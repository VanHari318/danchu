        height: 1000
        font_size: 18
        multiline: True
        pos_hint: {'center_x': 0.27, 'center_y': 0.4}
    AnchorLayout:
        id:datatable
        pos_hint:{"center_x":.77,"center_y":.50}
    MDRoundFlatButton:
        text:"Gửi"
        text_color: 0, 1, 0, 1
        size_hint:None,None
        pos_hint:{"center_x":.65,"center_y":.15}
        size:(100,190)
        on_release:app.gmail(subject.text,body.text)
    MDRoundFlatButton:
        text: "trở về"
        on_release: root.manager.current = 'giao_dien_chinh';app.clear_contacts_after_search();app.clear_ckeck_press_thongbao_datatable()